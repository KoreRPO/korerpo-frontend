---
layout: base.11ty.js
eleventyComputed:
    title: "{{ homepage.seo_title }}"
    description: "{{ homepage.seo_description }}"
---
<section class="jumbotron">
    <div class="jumbotron__text">
        {{ homepage.jumbotron.text_as_html|safe }}
    </div>
    <p class="jumbotron__actions">
        <a href="{{ homepage.jumbotron.button_action }}" class="button white outline">
            {{ homepage.jumbotron.button_text }}
        </a>
    </p>
</section>

<a id="who-is-kore-rpo"></a>
<section class="who-is{% if homepage.who_is.image_meta %} who-is--with-image{% endif %}">
    <div class="who-is__text">
        <h1>{{ homepage.who_is.hed }}</h1>
        {{ homepage.who_is.content_as_html|safe }}
    </div>
    {% if homepage.who_is.image_meta %}
        <figure class="who-is__image">
            <img src="{{ homepage.who_is.image_meta.metadata.lqip }}" alt="" width="{{ homepage.who_is.image_meta.metadata.dimensions.width }}" height="{{ homepage.who_is.image_meta.metadata.dimensions.height }}" data-src="{{ homepage.who_is.image_meta.url }}" decoding="async">
        </figure>
    {% endif %}
</section>

<a id="approach"></a>
<section class="approach">
    <h2>{{ homepage.approach.hed }}</h2>
    <div class="grid">
        {% for item in homepage.approach.approaches %}
            <div class="approach__card">
                <h3>{{ item.label }}</h3>
                <p>{{ item.content }}</p>
            </div>
        {% endfor %}
    </div>
</section>

<a id="results"></a>
<section class="results">
    <div class="grid">
        <h2>{{ homepage.impact.hed }}</h2>
        <ul>
            {% for testimonial in homepage.impact.testimonials %}
                <li>
                    <blockquote>
                        <p>{{ testimonial.content }}</p>
                        <cite>
                            <b>{{ testimonial.name }}</b> - {{ testimonial.position }}<br>
                            {{ testimonial.company }}
                        </cite>
                    </blockquote>
                </li>
            {% endfor %}
        </ul>
    </div>
</section>

{% if homepage.bios %}
    <a id="about"><span class="reader-only">About KORE RPO</span></a>
    <section class="about">
        {% for bio in homepage.bios %}
            <div class="bio">
                {% if bio.image_meta %}
                    <figure class="bio__image">
                        <img src="{{ bio.image_meta.metadata.lqip }}" alt="" width="{{ bio.image_meta.metadata.dimensions.width }}" height="{{ bio.image_meta.metadata.dimensions.height }}" data-src="{{ bio.image_meta.url }}" decoding="async">
                    </figure>
                {% endif %}
                <div class="bio__text">
                    <header>
                        <p class="bio__position">{{ bio.position }}</p>
                        <p class="bio__name">{{ bio.name }}</p>
                        {% if bio.linkedin_link %}
                            <a href="{{ bio.linkedin_link }}" target="_blank" rel="noopener noreferrer">
                                <span class="reader-only">{{ bio.name }} on LinkedIn</span>
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M416 32H31.9C14.3 32 0 46.5 0 64.3v383.4C0 465.5 14.3 480 31.9 480H416c17.6 0 32-14.5 32-32.3V64.3c0-17.8-14.4-32.3-32-32.3zM135.4 416H69V202.2h66.5V416zm-33.2-243c-21.3 0-38.5-17.3-38.5-38.5S80.9 96 102.2 96c21.2 0 38.5 17.3 38.5 38.5 0 21.3-17.2 38.5-38.5 38.5zm282.1 243h-66.4V312c0-24.8-.5-56.7-34.5-56.7-34.6 0-39.9 27-39.9 54.9V416h-66.4V202.2h63.7v29.2h.9c8.9-16.8 30.6-34.5 62.9-34.5 67.2 0 79.7 44.3 79.7 101.9V416z"/></svg>
                            </a>
                        {% endif %}
                    </header>
                    <div class="bio__content">
                        {{ bio.content_as_html | safe }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
{% endif %}

<a id="get-started"></a>
<section class="cta">
    <h2>{{ homepage.cta.hed }}</h2>
    {% if homepage.cta.dek %}
        <p>{{ homepage.cta.dek }}</p>
    {% endif %}
    <p class="cta__actions">
        <a class="button blue-medium" href="{{ homepage.cta.button_action }}">
            {{ homepage.cta.button_text }}
        </a>
    </p>
</section>